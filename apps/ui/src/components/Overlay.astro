---
import SiteSelector from "./SiteSelector";
---

<div
  class="z-10 min-w-lg min-h-full absolute top-0 left-0 right-0 bottom-0 bg-black/50 text-white flex flex-col justify-center items-center"
>
  <div
    id="overlay"
    class="min-w-lg max-w-4xl w-lg bg-gray-600 absolute right-0 top-auto py-2 px-8 rounded-tl-lg"
  >
    <h1 class="text-2xl">XPlore</h1>
    <h3>Select your destinations below:</h3>

    <SiteSelector client:only="react" />
  </div>
</div>

<script>
  const fixResizing = () => {
    const overlayEl = document.getElementById("overlay");
    if (!overlayEl) return;
    if (window.innerWidth < 768) {
      overlayEl.classList.remove("right-0", "top-auto");
      overlayEl.classList.add("bottom-0");
    } else {
      overlayEl.classList.remove("bottom-0");
      overlayEl.classList.add("right-0", "top-auto");
    }
  };

  window.addEventListener("load", fixResizing);
  window.addEventListener("resize", fixResizing);
</script>
